/* tc - project's prefix*/

.tc-toolbar {
  background: #368be6;

  &--hidden {
    visibility: hidden;
  }

  &--hor {
    width: 100%;
    height: 21px;
    display: flex;
    align-items: center;
    flex-direction: row;
    position: absolute;
    left: 0;
    top: 1px;
    z-index: 100;
  }

  &--ver {
    height: 100%;
    width: 21px;
    display: flex;
    align-items: center;
    flex-direction: column;
    position: absolute;
    top: 0;
    left: -1px;
    z-index: 100;
  }

  &__plus {
    height: 21px;
    width: 21px;
    margin-top: 0;

    &--hor {
      margin-left: -10px;
    }

    &--ver {
      margin-top: -10px;
    }
  }

  &__shine-line {

    &--hor {
      min-height: 1px;
      width: 100%;
    }

    &--ver {
      min-width: 1px;
      height: 100%;
    }
  }

}